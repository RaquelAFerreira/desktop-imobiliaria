<Window x:Class="AluguelImoveis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Aluguéis"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <!-- Título do sistema -->
        <TextBlock Text="Sistema de Aluguel de Imóveis"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="10"
                   DockPanel.Dock="Top"
                   HorizontalAlignment="Center"/>

        <!-- Menu superior -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Background="#EEE"
                    Margin="10"
                    HorizontalAlignment="Center">
            <Button Content="Locatários" Margin="5" Click="ListarLocatarios_Click" Width="100"/>
            <Button Content="Imóveis" Margin="5" Click="ListarImoveis_Click" Width="100"/>
            <Button Content="Aluguéis" Margin="5" Click="ListarAlugueis_Click" Width="100"/>
        </StackPanel>

        <!-- Área de navegação -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
