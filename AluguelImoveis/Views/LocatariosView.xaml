<Window x:Class="AluguelImoveis.Views.LocatariosView" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Locatários" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Cadastrar Locatário"
                Margin="10"
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Cadastrar_Click"
                Grid.Row="0"/>

        <ListView Name="LocatariosList"
                  Margin="10"
                  Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding NomeCompleto}" Width="150"/>
                    <GridViewColumn Header="Telefone" DisplayMemberBinding="{Binding Telefone}" Width="150"/>
                    <GridViewColumn Header="CPF" DisplayMemberBinding="{Binding CPF}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>