<Window x:Class="AluguelImoveis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Aluguéis" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Menu lateral ou topo -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#EEE" Margin="10">
            <Button Content="Locatários" Margin="5" Click="ListarLocatarios_Click"/>
            <Button Content="Imóveis" Margin="5" Click="ListarImoveis_Click"/>
            <Button Content="Aluguéis" Margin="5" Click="ListarAlugueis_Click"/>
        </StackPanel>

        <!-- Área de navegação -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
