        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Início" Height="400" Width="600">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBlock Text="Sistema de Aluguel de Imóveis"
                   FontSize="24"
                   FontWeight="Bold"
                   TextAlignment="Center" Height="93"/>

        <Button Content="Locatários" Width="250" Margin="5" Click="ListarLocatarios_Click" Height="50"/>
